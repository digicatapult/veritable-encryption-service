{
  "name": "@digicatapult/veritable-encryption-service",
  "version": "0.1.17",
  "description": "An OpenAPI service for encryption in Veritable",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "check": "npm run tsoa:build && tsc --noEmit",
    "depcheck": "depcheck",
    "clean": "rimraf -rf ./build",
    "build": "npm run clean && npm run tsoa:build && swc ./src -d ./build --strip-leading-paths --copy-files",
    "tsoa:build": "tsoa spec-and-routes",
    "tsoa:watch": "nodemon --watch src --ext ts --exec \"tsoa spec-and-routes\"",
    "dev": "concurrently \"npm run tsoa:watch\" \"nodemon --watch src --watch build/routes/swagger.json --ext ts,json --exec 'SWCRC=true NODE_ENV=dev node --import @swc-node/register/esm-register --enable-source-maps src/index.ts | pino-pretty -c -S'\"",
    "start": "node build/index.js",
    "test:integration": "NODE_OPTIONS=--no-experimental-strip-types NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json ./test/integration/*.test.ts",
    "test:unit": "NODE_OPTIONS=--no-experimental-strip-types NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json ./src/**/*.test.ts",
    "db:cmd": "node --import @swc-node/register/esm-register ./node_modules/.bin/knex",
    "db:migrate": "npm run db:cmd -- migrate:latest",
    "db:rollback": "npm run db:cmd -- migrate:rollback"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digicatapult/veritable-encryption-service.git"
  },
  "engines": {
    "node": "24.x",
    "npm": "11.x"
  },
  "keywords": [
    "OpenAPI"
  ],
  "author": "Digital Catapult",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/digicatapult/veritable-encryption-service/issues"
  },
  "homepage": "https://github.com/digicatapult/veritable-encryption-service#readme",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@swc-node/register": "^1.11.1",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@types/chai": "^5.2.3",
    "@types/chai-as-promised": "^8.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^21.0.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "chai": "^6.2.1",
    "chai-as-promised": "^8.0.2",
    "concurrently": "^9.2.1",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "mocha": "^11.7.5",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.3",
    "prettier-plugin-organize-imports": "^4.3.0",
    "rimraf": "^6.1.2",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@credo-ts/core": "^0.5.18",
    "@hyperledger/aries-askar-nodejs": "^0.2.3",
    "@tsoa/runtime": "^6.6.0",
    "@tweedegolf/sab-adapter-minio": "^3.0.1",
    "@tweedegolf/sab-adapter-s3": "^3.0.3",
    "@tweedegolf/sab-adapter-azure-blob": "^3.0.1",
    "@tweedegolf/storage-abstraction": "^3.0.3",
    "@types/multer": "^2.0.0",
    "cbor2": "^2.0.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "envalid": "^8.1.1",
    "express": "^5.2.1",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "13.1.3",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "tsyringe": "^4.10.0",
    "zod": "^4.1.13"
  },
  "overrides": {
    "ref-napi": "npm:@2060.io/ref-napi",
    "node-addon-api": "8.5.0"
  }
}
